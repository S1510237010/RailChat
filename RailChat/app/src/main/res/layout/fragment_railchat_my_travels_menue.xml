<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".travel.Railchat_My_Travels_Menu">

    <include
        android:id="@+id/myTravelsMenu_toolbar"
        layout="@layout/travel_menu_toolbar"

        ></include>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right">

                <ImageButton
                    android:layout_margin="15dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_add_black_24dp"
                    android:background="@drawable/button_round"
                    android:id="@+id/my_travels_menu_add_button"
                    android:layout_gravity="right|bottom"
                    android:visibility="invisible" />

                <ImageButton
                    android:layout_margin="15dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:background="@drawable/button_round"
                    android:id="@+id/my_travels_menu_delete_button"
                    android:layout_gravity="right|bottom"
                    android:visibility="invisible" />

                <ImageButton
                    android:layout_margin="15dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_create_black_24dp"
                    android:background="@drawable/button_round"
                    android:id="@+id/my_travels_menu_edit_button"
                    android:layout_gravity="right|bottom" />
            </LinearLayout>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/travel_list"
                android:layout_weight="1" />

        </LinearLayout>

</FrameLayout>
